<%= form_with scope: :article, url: update_article_path, local: true, method: :patch do |f| %>

<p>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name%>
</p>

<p>
    <%= f.label :body %><br/>
    <%= f.text_field :body%>
</p>

<p>
    <%= f.submit "Update Article" %>
</p>

<% end %>