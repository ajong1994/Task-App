<%= form_with model: @category, local: true do |f| %>

<p>
    <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name, "Category Name" %><br/>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>