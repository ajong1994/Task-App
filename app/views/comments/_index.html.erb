<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        <% @comments.each do |comment| %>
            <tr> 
                <td><%= comment.id %> </td>
                <td><%= comment.body %> </td>
                <td><%= link_to 'Edit', edit_article_comment_path(@article.id, comment.id) %> </td>
                <td><%= link_to 'Delete', article_comment_path(@article.id, comment.id), method: :delete %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to 'Add comment', new_article_comment_path(@article) %>
