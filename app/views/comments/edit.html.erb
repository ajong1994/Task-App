<%= form_with model: [@article, @comment], method: :put, local: true do |f| %>

<p>
    <% if @comment.errors.any? %>
        <ul>
            <% @comment.errors.full_messages.each do |m| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :body%><br/>
    <%= f.text_field :body %>
</p>


<p>
    <%= f.submit %>
</p>

<% end %>